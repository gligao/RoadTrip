@model RoadTrip.Models.Country

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this country with all the attractions?</h3>

<div>
    <h4>@Model.Name</h4>

    <table class="table">
        <tr>
            <td>
                <img src="@Html.DisplayFor(model =>model.Image)" width="200" alt="" />
            </td>
            <td>
                <b>Continent:</b> @Html.DisplayFor(model => model.Continent.Name)
                <br /><br />
                @Html.DisplayFor(model => model.Description)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions delete bottom-options">
            <input type="submit" value="Delete" class="btn button-form" /> |
            @Html.ActionLink("Back to List", "Index", new { id = Model.ContinentId })
        </div>
    }
</div>
