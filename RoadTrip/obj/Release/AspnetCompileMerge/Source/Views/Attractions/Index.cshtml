@model IEnumerable<RoadTrip.Models.Attraction>

@{
    ViewBag.Title = "Index";
}

<h2>Attractions in @ViewBag.ContinentName</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image)" width="100" alt="@item.Image" />
            </td>
            <td class="country-link">
                <a href="@Url.Action("Details", "Countries", new { idCountry = item.CountryId, idContinent = item.Country.ContinentId })">
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </a>
            </td>
            <td class="bottom-options">
                @Html.ActionLink("Edit", "Edit", new { id = item.AttractionId, idContinent = item.Country.ContinentId })<hr class="no-margins" />
                @Html.ActionLink("Details", "Details", new { id = item.AttractionId, idContinent = item.Country.ContinentId })<hr class="no-margins" />
                @Html.ActionLink("Delete", "Delete", new { id = item.AttractionId, idContinent = item.Country.ContinentId })
            </td>
        </tr>
}
</table>
   
@if (TempData["Alert"] != null)
{
    <h2 id="alert">Please add a country first!</h2>
}

<div class="bottom-options">
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function(){
        $("#alert").fadeOut(3000);
    });
</script>